<div class="msg" style="display:none;">
  <%=typeof flash_msg == 'undefined' ? '' : flash_msg%>
</div>

<div class="box">
  <div class="box-header">
    <div class="col-md-6" style="padding: 0;">
        <button class="form-control btn btn-primary" data-toggle="modal" data-target="#tambah-pegawai"><i class="glyphicon glyphicon-plus-sign"></i> Tambah Data</button>
    </div>
    <div class="col-md-3">
        <a href="/pegawai/export" class="form-control btn btn-default"><i class="glyphicon glyphicon glyphicon-floppy-save"></i> Export Data Excel</a>
    </div>
    <div class="col-md-3">
        <button class="form-control btn btn-default" data-toggle="modal" data-target="#import-pegawai"><i class="glyphicon glyphicon glyphicon-floppy-open"></i> Import Data Excel</button>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table id="list-data" class="table table-bordered table-striped" width="100%"></table>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#list-data').DataTable( {
        data: <%=typeof dataSet == 'undefined' ? [] : dataSet%>,
        columns: [
            { title: "Nama" },
            { title: "No Telp" },
            { title: "Asal kota" },
            { title: "Jenis Kelamin" },
            { title: "Posisi" },
            { title: "Aksi" }
        ]
    });
  });
</script>