<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    
    <title>AdminCRUD | Log in</title>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="/lte/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lte/eksternal/font-awesome.min.css">
    <link rel="stylesheet" href="/lte/eksternal/ionicons.min.css">
    <link rel="stylesheet" href="/lte/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="/lte/plugins/sweetalert2/css/sweetalert2.min.css">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="hold-transition login-page">
    <div class="login-box">
      <div class="login-logo">
        <a href="/"><b>Admin</b>CRUD</a>
      </div>

      <div class="login-box-body">
        <p class="login-box-msg">
          Log in to start your session
        </p>

        <form id="form-login">
          <div class="form-group has-feedback">
            <input type="text" class="form-control" placeholder="Username" name="username">
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            <input type="password" class="form-control" placeholder="Password" name="password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>
          <div class="row">
            <div class="col-xs-offset-8 col-xs-4">
              <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- jQuery 2.2.3 -->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/lte/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script src="/lte/bootstrap/js/bootstrap.min.js"></script>
    <script src="/lte/plugins/sweetalert2/js/sweetalert2.min.js"></script>
  </body>
</html>

<script type="text/javascript">
  $(document).on('submit', '#form-login', function(e) {
    e.preventDefault();

    var data = $(this).serialize();
    $.post('/login', data, function(out) {
      if (!out.status) {
        swal(
          'Login Gagal',
          out.msg,
          'error'
        );
      } else {
        location.href = '/dashboard';
      }
    });
  });
</script>